<%- include('../partials/head.ejs') %>
    <%- include('doormanHeader.ejs') %>
        <div class="container col-4">
            <h1 class="pb-3 text-center">Cadastro de visitante</h1>
            <form method="post" action="/postvisiter">
                <div class="form-outline mb-4">
                    <input type="text" name="name" id="name" class="form-control"  placeholder="Digite o nome do visitante"/>
                    <label class="form-label" for="name">Nome</label>
                </div>

                <div class="form-outline mb-4">
                    <select class="form-select" aria-label="Default select example" id="turn">
                        <option selected value="manhã/tarde">MANHÃ/TARDE</option>
                        <option value="tarde/noite">TARDE/NOITE</option>
                      </select>
                    <label class="form-label" for="turn">Turno</label>
                </div>

                <div class="form-outline mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="active" checked>
                    <label class="form-label" for="active">Ativo?</label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Cadastrar</button>


            </form>
        </div>
        <%- include('../partials/footer.ejs') %>